{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": { 
    "strict": true,
    "target": "esnext",
    "module": "Node16",
    "lib": [
      "esnext"
    ],
    "types": ["bun-types"],
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "~/*": ["src/*"]
    },
    "declaration": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}